{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8500",
      "webRoot": "${workspaceRoot}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "Start App"
    },
    {
      "name": "App (on Ubuntu)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8500",
      "webRoot": "${workspaceRoot}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "Start App",
      "runtimeExecutable": "/snap/bin/chromium"
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server/index.ts",
      "outFiles": ["${workspaceFolder}/build/server/server.js"],
      "sourceMaps": true
    },
    {
      "name": "Storybook",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "storybook"],
      "noDebug": true
    },
    {
      "name": "Jest (shared repo)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/../atoll-shared/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}/../atoll-shared/",
      "windows": {
        "program": "${workspaceFolder}/../atoll-shared/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Server in Docker",
      "type": "docker",
      "request": "launch",
      "platform": "node"
    }
  ]
}
